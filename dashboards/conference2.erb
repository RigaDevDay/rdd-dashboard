<% content_for :title do %>RigaDevDays dashboard<% end %>
<div class="gridster">
  <ul>

    <!-- Row #1: logo, time, weather, sponsors -->

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
      <div data-id="twitter_mentions" data-view="Twitter" style="background-color:#1e4e8a;" data-moreinfo="Tweets tagged with #rigadevday"></div>
      <i class="icon-twitter icon-background"></i>
    </li>

    <li data-row="1" data-col="3" data-sizex="2" data-sizey="1" data-sponsors="evolution google oracle ctco ideaportriga finotech attido opus_capita citadele dgtouch sap toptal host1plus enjoy">
      <div data-id="sponsor" data-view="Sponsor" style="background-color:#BAE3F3"></div>
      <i class="icon-star icon-background"></i>
    </li>

    <li data-row="1" data-col="5" data-sizex="2" data-sizey="2">
      <div data-id="twitter_top_users" data-view="Heroes" data-title="Tweeting Heroes" style="background-color:#1e4e8a;" data-moreinfo="Tweet more to get onto this board"></div>
      <i class="icon-bar-chart icon-background"></i>
    </li>

    <!-- Row #2: twitter, schedule, voting -->

    <li data-row="2" data-col="3" data-sizex="2" data-sizey="1">
      <div data-id="schedule" data-view="Schedule" style="background-color:#2ca4e3;" data-moreinfo="Events coming soon"></div>
      <i class="icon-tasks icon-background"></i>
    </li>

    <!-- Row #3: twitter activity, twitter  -->

    <li data-row="3" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="twitter_activity" data-view="Graph" data-title="(re)tweets/hour" style="background-color:#2ca4e3;"></div>
      <i class="icon-twitter icon-background"></i>
    </li>

    <li data-row="3" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="weather" data-view="Weather" style="background-color:#2ca4e3;"></div>
    </li>

    <li data-row="3" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="clock" data-view="Clock" style="background-color:#2ca4e3;"></div>
      <i class="icon-time icon-background"></i>
    </li>

    <!--li data-row="3" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="logo" data-view="Image" data-image="/logo_2017_1.png"></div>
    </li-->

    <li data-row="3" data-col="5" data-sizex="2" data-sizey="1">
      <div data-id="logo" data-view="Image" data-image="/logo_full_2017.png"></div>
    </li>

  </ul>
</div>